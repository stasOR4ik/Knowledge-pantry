@model Knowledge_pantry.Models.ManageViewModels.LectureSummariesViewModel
@{
    ViewData["Title"] = "Summaries";
    ViewData.AddActivePage(ManageNavPages.LectureSummaries);
}


<h3 class="text-center">@Model.UserName's summaries</h3>
<form action="../SummaryOptions/CreateSummary">

    @if (Model.UserSummaries != null)
    {
        <table class="table">
            <tr>
                <th>
                    <a asp-action="LectureSummaries" asp-route-sortOrder="@ViewBag.CaptionSort">Caption</a>
                </th>
                <th>
                    <a asp-action="LectureSummaries" asp-route-sortOrder="@ViewBag.LastUpdateTimeSort">Date</a>
                </th>
                <th>
                    <a asp-action="LectureSummaries" asp-route-sortOrder="@ViewBag.LikeSort">Like</a>
                </th>
                <th>
                    <a asp-action="LectureSummaries" asp-route-sortOrder="@ViewBag.NumberOfSpecialtySort">Number of specialty</a>
                </th>
            </tr>
            @foreach (Summary u in Model.UserSummaries)
             {
                <tr>
                    <td>
                        <a asp-controller="SummaryOptions" asp-action="ViewAndEditSummary" asp-route-id="@u.Id">@u.Caption</a>
                    </td>
                    <td>@u.LastUpdateTime</td>
                    <td>@u.Like</td>
                    <td>@u.NumberOfSpecialty</td>
                </tr>
             }
        </table>
    }
    <button type="submit" class="btn btn-success">Create</button>
</form>