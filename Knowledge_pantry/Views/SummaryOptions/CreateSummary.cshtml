@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Heading</label>
        <div class="col-sm-3">
            <input class="form-control" id="caption" name="caption" placeholder="Heading">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Number of specialty</label>
        <div class="col-sm-3">
            <input class="form-control" id="numberOfSpecialty" name="numberOfSpecialty" placeholder="Number of speciality">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Annotation</label>
        <div class="col-sm-6">
            <textarea class="form-control" rows="2" id="annotation" name="annotation" placeholder="Annotation"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Text</label>
        <div class="col-sm-8">
            <textarea class="form-control" rows="12" id="text" name="text" placeholder="Text"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-1 col-sm-offset-2">
            <button type="submit" class="form-control btn btn-primary">Create</button>
        </div>
    </div>
</form>