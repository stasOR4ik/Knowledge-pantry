@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="form-group row">
        <div class="col-6 col-lg-3">
            <input class="form-control" id="caption" name="caption" placeholder="Heading">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6 col-lg-3">
            <input class="form-control" id="numberOfSpecialty" name="numberOfSpecialty" placeholder="Number of speciality">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6 col-lg-6">
            <textarea class="form-control" id="annotation" name="annotation" placeholder="Annotation"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6 col-lg-9">
            <textarea class="form-control" id="text" name="text" placeholder="Text"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-3 col-lg-1">
            <button type="submit" class="form-control btn btn-primary">Create</button>
        </div>
    </div>
</form>